# Next.js Web App Environment Variables
# Project setup for Bilfinans Web

# Your Sanity Project ID
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id

# Your Sanity Dataset
NEXT_PUBLIC_SANITY_DATASET=production

# Sanity API version - using current date
NEXT_PUBLIC_SANITY_API_VERSION=2024-03-06

# URL to your Sanity Studio in development
NEXT_PUBLIC_SANITY_STUDIO_URL=http://localhost:3333

# Sanity API token (get from your Sanity dashboard)
SANITY_API_READ_TOKEN=your_read_token_here

# Use same token for write access - can be different if needed
SANITY_API_WRITE_TOKEN=your_write_token_here

# Disable CDN caching for development to ensure fresh data
NEXT_PUBLIC_SANITY_USE_CDN=false

# GitHub Personal Access Token
GITHUB_PAT=your_github_pat_here
